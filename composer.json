{
    "name": "jjgrainger/validation",
    "description": "Extensible PHP validation",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Validation\\": "src/"
        }
    },
    "authors": [
        {
            "name": "jjgrainger",
            "email": "github@jjgrainger.co.uk"
        }
    ],
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.5",
        "squizlabs/php_codesniffer": "^4.0",
        "phpstan/phpstan": "^2.1"
    },
    "scripts": {
        "phpcs": "phpcs --standard=psr2 src",
        "phpstan": "phpstan analyse --memory-limit=512M",
        "phpunit": "phpunit",
        "phpunit:coverage": "./vendor/bin/phpunit --coverage-clover=coverage.xml"
    }
}
